@model IEnumerable<SachOnline.Models.KHACHHANG>

@{
    ViewBag.Title = "Đăng nhập tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    td {
        height: 40px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <h2 style="text-align:center;">ĐĂNG NHẬP</h2>
    <table align="center">

        <tr>
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN") @ViewData["Err1"]
            </td>
        </tr>
        <tr>
            <td>Mật khẩu: </td>
            <td>
                @Html.Password("MatKhau") @ViewData["Err2"]
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
        
    </table>
}

