@model IEnumerable<SachOnline.Models.SACH>


<h2 class="text-center">SÁCH BÁN NHIỀU</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-6 col-md-6">
            <div class="media-object-default">
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object imgsachbannhieu"
                                 src="~/Style/Images/@item.AnhBia" alt="placeholder image">
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><a href="@Url.Action("ChiTietSach","SachOnline", new {id=item.MaSach})" style="font-size:15px">@item.TenSach</a></h4>
                        @item.MoTa
                    </div>
                </div>
            </div>
        </div>
    }

</div>


