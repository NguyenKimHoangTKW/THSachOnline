@model SachOnline.Models.SACH
@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="thumbnail" style=" border: 1px solid #80808033; width: auto; margin-left: 300px; margin-right: 16px; margin-top: 20px; ">
    <h4 class="tensach" style="text-align: center; font-weight: bold; color: red; font-size: 25px; margin-bottom: 17px; background-color: #5f57e926; box-shadow: 0px 20px 7px 3px #5f57e926;">
        @Model.TenSach
    </h4>
    <img src="~/Style/Images/@Model.AnhBia" alt="@Model.TenSach" style="box-shadow: 0px -1px 13px 7px #888888; margin-bottom: 31px"/>
    <div class="motasach" style="font-size : 15px">
        <p>
            @Html.Raw(Model.MoTa.ToString().Replace("\n","</p><p>&nbsp&nbsp&nbsp&&nbsp&nbsp"))
        </p>
    </div>
    <div style="text-align: center; margin-left: 363px; margin-bottom: 25px ">
        <p class="ngaycapnhat" style="font-weight : bold">Ngày Cập Nhật : @Html.FormatValue(Model.NgayCapNhat, "{0:dd/MM/yyyy}")</p>
        <p class="giaban" style="font-weight : bold">Giá bán : <span style="color : blue ;font-size : 20px">@Html.FormatValue(Model.GiaBan, "{0:#,##0}") VNĐ</span></p>
        <p class="addtocard">
            <a href="@Url.Action("AddToCard","ShoppingCard"), new {id= @Model.MaSach}" class="btn btn-primary" role="button">
                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                Add To Card
            </a>
        </p>
    </div>
</div>
