@model SachOnline.Models.NHAXUATBAN

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="table-responsive" style="margin:0px auto;">
        <table class="table">
            <h4><strong>XÓA THÔNG TIN NHÀ XUẤT BẢN</strong></h4>
            <h2>@ViewBag.ThongBao</h2>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                   Tên nhà xuất bản
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenNXB)
                </dd>

                <dt>
                 Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt>
                    Số điện thoại
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DienThoai)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete"class="btn btn-primary btn-tone m-r-5"/>
            <button class="btn btn-primary btn-tone m-r-5">
                @Html.ActionLink("Back to List", "Index")
                </button>
        </div>
            }
            </table>
    </div>
</body>
</html>
