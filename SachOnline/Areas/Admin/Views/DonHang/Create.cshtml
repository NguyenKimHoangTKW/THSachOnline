@model SachOnline.Models.DONDATHANG

@{
    Layout = null;
}

<!DOCTYPE html>
@Styles.Render("~/Content/AdminStyle/css")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ĐƠN ĐẶT HÀNG</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p><strong>Đã thanh toán</strong></p>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.DaThanhToan)
                        @Html.ValidationMessageFor(model => model.DaThanhToan, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <p><strong>Tình trang giao hàng</strong></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TinhTrangGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TinhTrangGiaoHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p><strong>Ngày đặt</strong></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p><strong>Ngày giao</strong></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p><strong>Họ tên</strong></p>
                <div class="col-md-10">
                    @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  
                        <input type="submit" value="Create" class="btn btn-primary btn-tone m-r-5" />
                
                    <button class="btn btn-primary btn-tone m-r-5">
                        @Html.ActionLink("Back to List", "Index")
                        </button>

                </div>
            </div>
        </div>
    }

</body>
</html>
