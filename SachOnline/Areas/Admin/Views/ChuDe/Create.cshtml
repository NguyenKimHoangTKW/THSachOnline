@model SachOnline.Models.CHUDE

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <h4 class="card-title" style="text-align:center; font-size:25px; color:red;">Thêm mới chủ đề</h4>
        <dl class="dl-horizontal">
            <div class="card" style=" margin-top: 75px;">
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Tên chủ đề:</td>
                                    <td>
                                        @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </dl>
        <p>
            <input type="submit" value="Save" class="btn btn-primary btn-tone m-r-5" />|
            <button class="btn btn-primary btn-tone m-r-5">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </p>
}
