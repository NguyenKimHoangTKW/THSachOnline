@model SachOnline.Models.CHUDE

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin :0px auto">
    <h4 class="card-title" style="text-align:center; font-size:25px; color:red;">Thông tin chủ đề @Model.TenChuDe</h4>
    <dl class="dl-horizontal">
        <div class="card" style=" margin-top: 75px;">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>Mã chủ đề:</td>
                                <td>
                                    @Html.DisplayFor(model => model.MaCD)
                                </td>
                            </tr>
                            <tr>
                                <td>Tên chủ đề:</td>
                                <td>
                                    @Html.DisplayFor(model => model.TenChuDe)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </dl>
    <p>
        <a href="/Admin/ChuDe/Edit?id=@Model.MaCD">
            <button class="btn btn-success btn-tone m-r-5">Sửa chủ đề</button>|
        </a>
        <a href="/Admin/ChuDe/Index">
            <button class="btn btn-warning btn-tone m-r-5">Quay lại trang chủ đề</button>
        </a>
    </p>
</div>
