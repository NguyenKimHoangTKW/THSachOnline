@model SachOnline.Models.CHUDE

@{
    Layout = null;
}

<!DOCTYPE html>
@Styles.Render("~/Content/AdminStyle/css")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4><strong>SỬA CHỦ ĐỀ</strong></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaCD)

            <div class="form-group">
                <p><strong>Tên chủ đề</strong></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-tone m-r-5" />
                    <button class="btn btn-primary btn-tone m-r-5">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            </div>
        </div>
    }

  
</body>
</html>
