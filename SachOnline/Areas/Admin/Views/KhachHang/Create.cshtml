@model SachOnline.Models.KHACHHANG

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
 
</head>
<body>
    <div class="table-responsive" style="margin:0px auto;">
        <table class="table" >
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>THÊM KHÁCH HÀNG</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                              <p style="margin-left:17px;">Tên khách hàng</p>
                              <div class="col-md-10">
                                  <input type="text" class="form-control" name="HoTen" min="1" required>
                                  @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                              </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Tên tài khoản</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="TaiKhoan" min="1" required>
                            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Mật khẩu</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="MatKhau" min="1" required>
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Email</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="Email" min="1" required>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Địa chỉ</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="DiaChi" min="1" required>
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Số điện thoại</p>
                        <div class="col-md-10">
                            <input type="number" class="form-control" name="DienThoai" min="1" required>
                            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Ngày sinh</p>
                        <div class="col-md-10">
                            <input type="date" class="form-control" name="NgaySinh" min="1" required>
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary btn-tone m-r-5" />
                            <button class="btn btn-primary btn-tone m-r-5">
                                @Html.ActionLink("Quay lại trang chủ", "Index")
                            </button>
                        </div>
                    </div>
                </div>
            }
        </table>
        </div>

</body>
</html>
