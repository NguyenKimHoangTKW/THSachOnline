@model SachOnline.Models.KHACHHANG

@{
    Layout = null;
}

<!DOCTYPE html>
@Styles.Render("~/Content/AdminStyle/css")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <hr />
    <div>
        <h4>XÓA KHÁCH HÀNG</h4>

        <dl class="dl-horizontal">
            <dt>
                Tên khách hàng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Tên tài khoản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>
                Mật khẩu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Địa chỉ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                Số điện thoại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DienThoai)
            </dd>

            <dt>
                Ngày sinh
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgaySinh)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary btn-tone m-r-5" />
                <button class="btn btn-primary btn-tone m-r-5">
                    @Html.ActionLink("Back to List", "Index")
                </button>
            </div>
        }
    </div>
</body>
</html>
