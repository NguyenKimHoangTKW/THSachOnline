@model SachOnline.Models.KHACHHANG

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div class="table-responsive" style="margin:0px auto;">
        <table class="table">
            <h4>XEM THÔNG TIN KHÁCH HÀNG</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên khách hàng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HoTen)
                </dd>

                <dt>
                    Tên tài khoản
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TaiKhoan)
                </dd>

                <dt>
                    Mật khẩu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>

                <dt>
                    Email
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt>
                    Số điện thoại
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DienThoai)
                </dd>

                <dt>
                    Ngày sinh
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NgaySinh)
                </dd>

            </dl>

            <p>
                <button class="btn btn-primary btn-tone m-r-5">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.MaKH })
                </button>
                <button class="btn btn-primary btn-tone m-r-5">
                    @Html.ActionLink("Quay lại trang trước", "Index")
                </button>
            </p>
            </table>
    </div>
</body>
</html>
