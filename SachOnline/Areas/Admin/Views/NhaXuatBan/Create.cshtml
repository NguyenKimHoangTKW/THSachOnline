@model SachOnline.Models.NHAXUATBAN

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="table-responsive" style="margin:0px auto;">
        <table class="table">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4><strong>THÊM NHÀ XUẤT BẢN</strong></h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <p style="margin-left:17px;">Tên nhà xuất bản</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="TenNXB" min="1" required>
                            @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Địa chỉ</p>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="DiaChi" min="1" required>
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="margin-left:17px;">Số điện thoại</p>
                        <div class="col-md-10">
                            <input type="number" class="form-control" name="DienThoai" min="1" required>
                            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input class="btn btn-primary btn-tone m-r-5" type="submit" value="Create" />
                            <button class="btn btn-primary btn-tone m-r-5"> @Html.ActionLink("Back to List", "Index")</button>

                        </div>
                    </div>
                </div>
            }
            </table>
        </div>

           
</body>
</html>
